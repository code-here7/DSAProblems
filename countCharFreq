const str = "aaacbbbc";
let act = str.split("");
let arr =[];
let count = 1;

for(let i = 1;i< act.length ; i++)
{
    
    if(act[i]==='a')
    {   
        count++;
    }
    
}
arr.push(count);
count = 0;
for(let i = 1;i< act.length ; i++)
{   
    
    if(act[i]==='b')
    {   
        count++;
    }
    
}
arr.push(count);
count = 0;
for(let i = 1;i< act.length ; i++)
{   
    
    if(act[i]==='c')
    {   
        count++;
    }
    
}
arr.push(count);
console.log(arr);




